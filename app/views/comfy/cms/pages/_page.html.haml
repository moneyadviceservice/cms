%tr
  %td
    = link_to(highlighted_terms(page.label, params[:search]), edit_comfy_admin_cms_site_page_path(page.site, page))
    - if alternate_content?(page)
      %br
      %strong Versions:
      %em
        = link_to(highlighted_terms('Live Article', params[:search]), edit_comfy_admin_cms_site_page_path(page.site, page))
      \|
      %em
        = link_to edit_comfy_admin_cms_site_page_path(page.site, page, alternate: true) do
          - if page.published_being_edited?
            Draft new Version
          - elsif page.scheduled?
            Scheduled Update

  %td= page.layout.label
  %td{:class => 'categories'}= page.category_list
  %td= page.last_update
  %td= current_status(page)
  %td= { "en" => "English", "cy" => "Welsh" }[page.site.label]
