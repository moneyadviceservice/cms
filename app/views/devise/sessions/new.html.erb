<% @html_class = 'full-height-outer' %>
<% @body_class = 'full-height-inner' %>

<div class='login'>
  <div class='l-constrained'>
    <div class='login__brand'>
      <%= image_tag('cms-mas-logo-icon.png') %>
      <span class='login__brand-heading'> Contento </span>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'login__form'}) do |f| %>
      <div><%= f.label :email, "Email address" %><br />
      <%= f.email_field :email, autofocus: true %></div>

      <div>
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
      <% end -%>

      <div>
        <%= f.submit "Log in", class: 'pull-right button--action login__button' %>

        <% if devise_mapping.omniauthable? %>
          <%= link_to "Sign in with OKTA", omniauth_authorize_path(resource_name, :saml), class: '' %>
        <% end %>

        <span class='pull-right'>
          <%= render "devise/shared/links" %>
        </span>
      </div>
    <% end %>
  </div>
</div>
